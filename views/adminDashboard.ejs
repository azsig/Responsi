<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>SMART MASJID</h1>
    <h1>Admin</h1>
    <div class="date-time">
      <div id="date">Jun 10, 2024</div>
      <div id="time">9:41 AM</div>
    </div>
  </header>
  <section class="content">
      <div class="box" id="temperature">
        <div class="ket">
          <h2>Suhu</h2>
          <div class="text"><%= data.temperature %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="humidity">
        <div class="ket">
          <h2>Kelembaban</h2>
          <div class="text"><%= data.humidity %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="co2">
        <div class="ket">
          <h2>Kadar CO₂</h2>
          <div class="text"><%= data.co2 %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="lpg">
        <div class="ket">
          <h2>Kadar LPG</h2>
          <div class="text"><%= data.lpg %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="noise">
        <div class="ket">
          <h2>Kebisingan</h2>
          <div class="text"><%= data.noise %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="light">
        <div class="ket">
          <h2>Cahaya</h2>
          <div class="text"><%= data.light %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
      <div class="box" id="power">
        <div class="ket">
          <h2>Daya</h2>
          <div class="text"><%= data.power %>°C</div>
        </div>
        <div class="mercury"></div>
      </div>
  </section>
  <div class="link">
  <a class="linkBox" href="/">HomePage</a>
  <form  id="actuatorForm" method="POST" action="/admin/emergency">
    <button class="linkBox" type="submit" name="command" value="activate_actuator">Activate Actuator</button>
  </form>
  </div>
  

  <script>
    const actuatorForm = document.getElementById('actuatorForm');
    actuatorForm.addEventListener('submit', async (event) => {
      event.preventDefault(); // Mencegah halaman dimuat ulang

      // Ambil nilai command langsung dari elemen form
      const command = actuatorForm.querySelector('button').value;

      console.log('Command to send:', command); // Debug log untuk memastikan command tidak kosong

      try {
        const response = await fetch('/admin/emergency', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ command }), // Kirim command ke server
        });

        if (response.ok) {
          console.log('Command sent successfully');
          alert('Command sent to Raspberry Pi!');
        } else {
          console.error('Failed to send command');
          alert('Failed to send command');
        }
      } catch (error) {
        console.error('Error sending command:', error);
        alert('Error sending command');
      }
    });
  </script>
  <script>
    const userData = <%- JSON.stringify(data) %>; // Convert data to JSON
    console.log(userData);
    const endpoint = '/admin/data/0';
  </script>
  <script src="/scriptAdmin.js"></script>
</body>
</html>